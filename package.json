{
  "name": "json-schema2020-validator",
  "displayName": "JSON Schema 2020-12 Draft Validator",
  "description": "JSON Schema validator for Schema 2020-12 draft",
  "publisher": "AhmedSaad",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/theblissprogrammer/vscode-json-schema-validator.git",
    "directory": ""
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.validateJson",
    "onLanguage:json",
    "onLanguage:jsonc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.validateJson",
        "title": "Validate JSON Against Schema"
      },
      {
        "command": "extension.openJsonBuilder",
        "title": "Create JSON from Schema"
      },
      {
        "command": "extension.refreshSchemaCache",
        "title": "Refresh JSON Schema Cache"
      },
      {
        "command": "extension.openSettings",
        "title": "JSON Schema Validator: Configure Settings"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "jsonSchemaValidator.schemaPath": {
          "type": "string",
          "default": "/schemas/schema.json",
          "description": "Path to the JSON Schema file (file path or HTTP/HTTPS URL)"
        },
        "jsonSchemaValidator.schemaUrl": {
          "type": "string",
          "default": "",
          "description": "URL to fetch the JSON Schema from (if set, this takes precedence over schemaPath)"
        },
        "jsonSchemaValidator.schemaCacheDuration": {
          "type": "number",
          "default": 300,
          "description": "Duration in seconds to cache the schema fetched from URL (default: 300 seconds / 5 minutes)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "tsc",
    "package": "vsce package",
    "install-extension": "code --install-extension json-schema2020-validator-0.0.2.vsix"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/minimist": "^1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^12.0.1",
    "@sidvind/better-ajv-errors": "^4.0.0",
    "ajv": "^8.17.1",
    "better-ajv-errors": "^1.2.0",
    "jsonc-parser": "^3.3.1",
    "minimist": "^1.2.8"
  }
}
